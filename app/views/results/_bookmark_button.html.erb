<turbo-frame id="bookmark-button">
  <% if current_user.bookmark?(question) %>
    <%= link_to "bookmarked", category_question_bookmark_path(question_id: question.id), 
    id: "js-bookmark-button-for-question-#{question.id}", 
    data: { turbo_method: :delete },
    status: :see_other %>
  <% else %>
    <%= link_to "not_bookmarked", category_question_bookmark_path(question_id: question.id), 
    id: "js-bookmark-button-for-question-#{question.id}-not-bookmarked",
    data: { turbo_method: :post },
    status: :see_other %>
  <% end %>
</turbo-frame>
