<section class="bg-gray-50">
  <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
      <dl>
          <dt class="mb-2 font-semibold leading-none text-gray-900"><%= t(User.human_attribute_name(:name)) %></dt>
          <dd class="mb-4 font-light text-gray-500 sm:mb-5"><%= current_user.name %></dd>
      </dl>
      <dl>
          <dt class="mb-2 font-semibold leading-none text-gray-900"><%= t(User.human_attribute_name(:email)) %></dt>
          <dd class="mb-4 font-light text-gray-500 sm:mb-5"><%= current_user.email %></dd>
      </dl>
      <dl>
          <dt class="mb-2 font-semibold leading-none text-gray-900"><%= t(User.human_attribute_name(:avatar)) %></dt>
          <dd class="mb-4 font-light text-gray-500 sm:mb-5">Electronics/PC</dd>
      </dl>
      <div class="flex items-center space-x-4">
          <button type="button" class="text-white inline-flex items-center bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
