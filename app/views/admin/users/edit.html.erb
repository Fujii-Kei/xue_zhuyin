<h1>Edit User</h1>

<%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :role %>
    <%= f.collection_select :role, User.roles.keys, :to_s, :humanize %>
  </div>

  <div class="actions">
    <%= f.submit 'Update User' %>
    <%= link_to 'Cancel', admin_users_path %>
  </div>
<% end %>
